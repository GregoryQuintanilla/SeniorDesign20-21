{
   "manifest_version": 2,
   "name": "Borderify",
   "version": "1.0",

   "description": "Adds a red border to all webpages matching mozilla.org.",

   "icons":{
        "48": "icons/report.png"
    },

    "browser_specific_settings": {
        "gecko": {
          "id": "borderify@example.com"
        }
      },

    "content_scripts":[
        {
            "matches":["*://*.mozilla.org/*"],
            "js":["borderify.js"]
        }
    ]
}